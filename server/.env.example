# Configuration du serveur
NODE_ENV=development
PORT=3000

# URL du client (React)
CLIENT_URL=http://localhost:5173

# Base de données
MONGODB_URI=mongodb://localhost:27017/mtg-website

# JWT Secret
JWT_SECRET=votre_jwt_secret_super_securise_changez_moi_en_production
JWT_EXPIRE=7d

# API externe Scryfall
SCRYFALL_API_URL=https://api.scryfall.com

# Limites de taux
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logs
LOG_LEVEL=info

# Sécurité
BCRYPT_ROUNDS=12

# Upload de fichiers
MAX_FILE_SIZE=10mb
UPLOAD_PATH=uploads/

# Cache
CACHE_TTL=3600
